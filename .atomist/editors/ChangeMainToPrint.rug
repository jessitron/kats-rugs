@description "adds a project specific README"
@tag "readme"
@tag "documentation"
editor ChangeMainToPrint

@displayName "greeting"
param greeting: @any

let new_body_content = { "Html.div [] [ \"" + greeting + "\"]" }

let main_function_body=$(/src//Elm()/function[/name[@value="main"]]/body)

with Project p
  with main_function_body
          do update new_body_content
